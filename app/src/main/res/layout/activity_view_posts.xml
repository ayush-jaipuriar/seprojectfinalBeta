<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".ViewPostsActivity"
     android:orientation="vertical"
     android:id="@+id/linearLayout2">

     <ImageView
        android:id="@+id/sentPostsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/placeholder"
        tools:layout_conversion_absoluteHeight="150dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <TextView
        android:id="@+id/txtDesciption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Here will be the desciption of the app" />

    <ListView
         android:id="@+id/postsListView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:layout_conversion_absoluteHeight="548dp"
         tools:layout_editor_absoluteY="272dp"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_conversion_absoluteWidth="308dp" >

    </ListView>
 </LinearLayout>